<%- include('layouts/header'); -%>
<body>
  <%- include('layouts/nav'); -%>
  <h1>Welcome to my Shop!</h1>
  <form name="myform" method="Post" onsubmit=""  action="" >
    <h3>Please purchase something</h3>
    <label>Name</label>
    <input id="name" placeholder="First and Last Name" type="text" name="name"><br/>

    <label>Email</label>
    <input id="email" placeholder="test@test.com" type="text" name="email"><br/>

    <label>Phone</label>
    <input id="phone" placeholder="5198201234" type="text" name="phone"><br/>

    <label>Address</label>
    <input id="address" placeholder="123 Street Rd" type="text" name="address"><br>

    <label>City</label>
    <input id="city" placeholder="City" type="text" name="city"><br>

    <label>Post Code</label>
    <input id="postt" placeholder="A1A 2B2" type="text" name="postt"><br>

    <label>Province</label>
    <input id="province" placeholder="ON" type="text" name="province"><br>

    <label>Number of Water Bottles ($1)</label>
    <select name="water1" id="water1">
        <option value="">Pick amount</option>
        <option value="1">1</option>
        <option value="2">2</option>
        <option value="3">3</option>
        <option value="4">4</option>
        <option value="5">5</option>
    </select><br/>

    <label>Number of 1L Water Bottles ($3)</label>
    <select name="water3" id="water3">
        <option value="">Pick amount</option>
        <option value="1">1</option>
        <option value="2">2</option>
        <option value="3">3</option>
        <option value="4">4</option>
        <option value="5">5</option>
    </select><br/>

    <label>Delivery Time</label>
    <select name="delivery" id="delivery">
        <option value="">Pick days</option>
        <option value="1">1 Day</option>
        <option value="2">2 Days</option>
        <option value="3">3 Days</option>
    </select><br/>

    <br/><br/>

    <input type="submit" value="Submit">
  </form>  
<div class="formData">
  <%
    if(typeof(errors) != 'undefined'){
      for(var error of errors){
      %>
        <p class="errors"><%= error.msg %></p>
      <%
      }
    }
  %>
  <%
    if(typeof(total) != 'undefined'){
      %>
      <p id="formResult">Thanks for purchasing! Here's your reciept:</p>
      <table>
        <tr>
          <th>Name: </th>
          <td><%= name %></td>
        </tr>
        <tr>
          <th>Email: </th>
          <td><%= email %></td>
        </tr>
        <tr>
          <th>Phone: </th>
          <td><%= phone %></td>
        </tr>
        <tr>
          <th>Address: </th>
          <td><%= address %></td>
        </tr>
        <tr>
          <th>City: </th>
          <td><%= city %></td>
        </tr>
        <tr>
          <th>Post Code: </th>
          <td><%= postt %></td>
        </tr>
        <tr>
          <th>Province: </th>
          <td><%= province %></td>
        </tr>
        <tr>
          <th>Water Bottles: </th>
          <td><%= water1 %></td>
        </tr>
        <tr>
          <th>1L Water Bottles: </th>
          <td><%= water3 %></td>
        </tr>
        <tr>
          <th>Delivery Time: </th>
          <td><%= delivery %> days</td>
        </tr>
        <tr>
          <th>Subtotal: </th>
          <td>$<%= subTotal.toFixed(2) %></td>
        </tr>
        <tr>
          <th>Tax: </th>
          <td>$<%= tax.toFixed(2) %></td>
        </tr>
        <tr>
          <th>Total: </th>
          <td>$<%= total.toFixed(2) %></td>
        </tr>
      </table>
      <%
    }
  %>
</div>
</body>
</html>